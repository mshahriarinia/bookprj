extends ../layout

block content
	h1= title
	form(method='post')
		input(name='firstName', class='input-block-level', placeholder='firstName')
		input(name='lastName', class='input-block-level', placeholder='lastName')
		input(name='email', class='input-block-level', placeholder='email')
		input(name='username', class='input-block-level', placeholder='username')
		input(name='password', class='input-block-level', type='password', placeholder='password')
		input(type='submit', class='btn btn-primary', value='Sign up')